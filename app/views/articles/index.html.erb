<h1>Wikinimous</h1>
<%= link_to "Add a new article", new_article_path %>

<% @articles.each do |article| %>
  <div class="article">
    <h2><%= link_to article.title, article_path(article) %></h2>
    <p><%= article.content %></p>
    <p><%= link_to "delete", article_path(article), method: :delete, data: { confirm: "Delete #{article.title}?" } %></p>
  </div>
<% end %>

